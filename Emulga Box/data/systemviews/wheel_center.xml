<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">
	<view name="system">
		<carousel name="systemcarousel">
			<type>vertical</type>
			<pos>0.3 0</pos>
			<size>0.4 1</size>
			<color>ffffff00</color>
			<logoScale>2</logoScale>
			<logoSize>0.15 0.093</logoSize>
			<maxLogoCount>5</maxLogoCount>
		</carousel>
		<text name="systemInfo">
			<backgroundColor>ffffff00</backgroundColor>
			<fontPath>./../arts/Exo2-BoldCondensed.otf</fontPath>
			<fontSize>0.035</fontSize>
			<pos>2 2</pos>
			<size>0.01 0.01</size>
		</text>
		<image name="console" extra="true">
			<pos>2 2</pos>
			<maxSize>0.01 0.01</maxSize>
			<origin>1 1</origin>
		</image>
		<image name="consolegame" extra="true">
			<pos>2 2</pos>
			<maxSize>0.01 0.01</maxSize>
			<origin>1 1</origin>
		</image>
		<image name="controller" extra="true">
			<pos>2 2</pos>
			<maxSize>0.01 0.01</maxSize>
			<origin>1 1</origin>
		</image>
		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
			<fontSize>0.01</fontSize>
			<size>0.01 0.01</size>
			<pos>2 2</pos>
		</text>
	</view>
	</feature>	
</theme>